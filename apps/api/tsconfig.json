{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node", "express"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "prisma/**/*.ts"]
}
